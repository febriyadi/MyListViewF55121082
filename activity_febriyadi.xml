<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FebriyadiActivity">
    <ImageView
        android:id="@+id/img_photo"
        android:src="@drawable/febriyadi"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:text="Febriyadi"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Febriyadi seorang mahasisawa berusia 20 tahun yang lahir dikota palu kini febriyadi menginjak bangku kuliah dan telah semester 3"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_centerInParent="true" />
</RelativeLayout>
